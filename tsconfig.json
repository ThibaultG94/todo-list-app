{
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "ES2018",
		"module": "commonjs",
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"noImplicitAny": false
	},
	"include": ["./backend/*/*.ts", "./backend/server.ts"],
	"exclude": ["node_modules", ".vscode"]
}
